<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>edit and add book</title>
  <script>
    function checker(e){
      if(window.confirm("Are you sure")){
        document.getElementById("edit-add-form").submit();
        } else {
          e.preventDefault();
        }
      // let title= document.getElementsByName("title")[0].value;
      // let author = document.getElementsByName("author")[0].value;
      // let category= document.getElementsByName("category")[0].value;
      // let dateRelease= document.getElementsByName("dateRelease")[0].value;
      
    }
    
  </script>
</head>
<body>
  <div class="container">
    <form action="<% if(idBook != -1){ %>
      update-book
      <%} else { %>
      create-book
      <% } %>"
      method="POST" id="edit-add-form">
      <% if (idBook != -1) { %>
        <p> Edit Book</p>
        <%} else { %>
          <p> Add Book</p>
        <% } %>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputEmail4">Title</label>
          <input type="text" class="form-control" name="title" placeholder="Book's title"
            value="<%= data.title%>" required>
        </div>
        <div class="form-group col-md-6">
          <label for="inputPassword4">Author</label>
          <input type="text" class="form-control" name="author" placeholder="Book's author"
            value="<%= data.author %>" required>
        </div>
        <div class="form-group col-md-6">
          <label for="inputPassword4">Category</label>
          <input type="text" class="form-control" name="category" placeholder="Book's category"
            value="<%= data.category %>" required>
        </div>
        <div class="form-group col-md-6">
          <label for="inputPassword4">Date of release</label>
          <input type="date" class="form-control" name="dateRelease" placeholder="Date release"
            value="<%= data.dateRelease %>" required>
        </div>
        <div class="form-group col-md-6">
          <label for="inputPassword4">Quanlity sold</label>
          <input type="number" class="form-control" name="quantitySold" placeholder="Quantity Sold"
            value="<%= data.quantitySold %>" required>
        </div>
        <div class="form-group col-md-6">
          <label for="inputPassword4">Number page</label>
          <input type="number" class="form-control" name="numberPage" placeholder="Number Page"
            value="<%= data.numberPage %>" required>
        </div>
      </div>
      <input type="text" name="id" value="<%= data.id %>" hidden />
      <div class="form-group mt-3">
        <!-- <% if (idBook != -1) { %>
          <button type="submit" class="btn btn-primary" onclick="checker(event)"> Update</button>
        <%} else { %>
            <button class="btn btn-primary" form="edit-add-form" onclick="checker(event)"> Create book</button>
        <% } %> -->

        <button class="btn btn-primary" form="edit-add-form" onclick="checker(event)">
          <% if(idBook!=-1){ %>
            Update Book
          <% } else{ %>  
            Create Book
         <% } %>
        </button>
      </div>
    </form>
  </div>

</body>
</html>
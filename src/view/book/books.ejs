<!DOCTYPE html>
<html>
<head>
  <title>home page</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script>
    
    function checker(e){
      if(!window.confirm("Are you sure delete book!")){
        e.preventDefault();
      } else {
        return;
      }
    }
  </script>
</head>
<body>
<div >


<h1 style="text-align: center;">Table Book</h1>
<table id="customers" class="table">
  <thead class="table-success">
    <tr>
      <th>STT</th>
      <th>Title</th>
      <th>Author</th>
      <th>Category</th>
      <th>Date of Release</th>
      <th>Quality sold</th>
      <th>Number of pages</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% for(var i=0; i < data.length; i++) { %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= data[i].title %></td>
      <td><%= data[i].author %></td>
      <td><%= data[i].category %></td>
      <td><%= data[i].dateRelease %></td>
      <td><%= data[i].quantitySold %></td>
      <!-- <td><input id="sold" disabled value="<%=data[i].sold%>" type="checkbox" name="sold" <%= data[i].sold==1 ? "checked" : "" %> /></td> -->
      <td><%= data[i].numberPage %></td>
      <td> 
        <a href="/edit-add-book?id=<%= data[i].id %>" type="button" class="btn btn-warning">Edit</a>
        <a href="/delete-book?id=<%= data[i].id %>" type="button" class="btn btn-danger" onclick="checker(event)">Delete</a>
      </td>
    </tr>
 <% } %>
</tbody>
</table>
<div style="text-align: center;">
  <a href="/edit-add-book?id=-1" type="button" class="btn btn-success">Add new account</a>
</div>
</div>
</body>
</html>


